generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum Role {
  ADMIN
  STAFF
}

enum SubscriptionPlan {
  TRIAL
  BASIC
  PROFESSIONAL
}

enum SubscriptionStatus {
  TRIALING
  ACTIVE
  CANCELED
  PAST_DUE
  UNPAID
}

model Organization {
  id        String    @id @default(cuid())
  name      String
  createdAt DateTime  @default(now())

  // Stripe & Subscription
  stripeCustomerId     String?            @unique
  stripeSubscriptionId String?
  subscriptionPlan     SubscriptionPlan   @default(TRIAL)
  subscriptionStatus   SubscriptionStatus @default(TRIALING)
  trialEndsAt          DateTime?

  users                User[]
  patients             Patient[]
  invitations          StaffInvitation[]
  autonomyAgreements   AutonomyAgreement[]
}

model User {
  id             String       @id @default(cuid())
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id])
  email          String       @unique
  passwordHash   String
  name           String
  role           Role         @default(STAFF)
  isActive       Boolean      @default(true)
  createdAt      DateTime     @default(now())
  mealPlans      MealPlan[]

  // E-Mail-Verifizierung
  emailVerified          Boolean   @default(false)
  emailVerificationToken String?   @unique

  // Passwort-Reset
  resetToken             String?   @unique
  resetTokenExpiresAt    DateTime?

  // Autonomie-Relationen
  createdAgreements      AutonomyAgreement[]  @relation("AgreementCreatedBy")
  auditLogEntries        AutonomyAuditLog[]   @relation("AuditChangedBy")

  @@index([organizationId])
  @@index([email])
}

model Patient {
  id             String        @id @default(cuid())
  organizationId String
  organization   Organization  @relation(fields: [organizationId], references: [id])
  pseudonym      String
  birthYear      Int
  currentWeight  Decimal       @db.Decimal(5, 2)
  targetWeight   Decimal       @db.Decimal(5, 2)
  targetDate     DateTime?     // Optionales Zieldatum für Gewichtsziel
  allergies      String[]
  notes          String?
  autonomyNotes  String?       // Legacy – wird durch AutonomyAgreement ersetzt
  isActive       Boolean       @default(true)
  weightHistory  WeightEntry[]
  mealPlans      MealPlan[]
  createdAt      DateTime      @default(now())
  createdBy      String

  // Autonomie-System
  autonomyAgreement  AutonomyAgreement?
  autonomyAuditLogs  AutonomyAuditLog[]

  @@index([organizationId])
}

model WeightEntry {
  id         String   @id @default(cuid())
  patientId  String
  patient    Patient  @relation(fields: [patientId], references: [id], onDelete: Cascade)
  weightKg   Decimal  @db.Decimal(5, 2)
  recordedAt DateTime @default(now())
  recordedBy String

  @@index([patientId])
}

model MealPlan {
  id            String        @id @default(cuid())
  patientId     String
  patient       Patient       @relation(fields: [patientId], references: [id], onDelete: Cascade)
  weekStart     DateTime
  planJson      Json
  totalKcal     Int
  promptUsed    String        @db.Text
  createdBy     String
  createdByUser User          @relation(fields: [createdBy], references: [id])
  shoppingList  ShoppingList?
  createdAt     DateTime      @default(now())

  @@index([patientId])
  @@index([createdBy])
}

model ShoppingList {
  id         String   @id @default(cuid())
  mealPlanId String   @unique
  mealPlan   MealPlan @relation(fields: [mealPlanId], references: [id], onDelete: Cascade)
  itemsJson  Json
  createdAt  DateTime @default(now())
}

model StaffInvitation {
  id             String       @id @default(cuid())
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id])
  email          String
  name           String
  role           Role         @default(STAFF)
  token          String       @unique
  expiresAt      DateTime
  invitedBy      String
  createdAt      DateTime     @default(now())

  @@unique([organizationId, email])
  @@index([token])
}

// Autonomie-Absprachen – Strukturierte Selbstständigkeitsvereinbarungen
model AutonomyAgreement {
  id                     String       @id @default(cuid())
  patientId              String       @unique
  patient                Patient      @relation(fields: [patientId], references: [id], onDelete: Cascade)
  organizationId         String
  organization           Organization @relation(fields: [organizationId], references: [id])

  // Portionier-Absprachen
  canPortionSupervised   Boolean      @default(false) // Darf unter Aufsicht portionieren
  canPortionIndependent  Boolean      @default(false) // Darf vollständig eigenständig portionieren

  notes                  String?      // Freitext: z.B. "Gilt nur beim Abendessen"
  validFrom              DateTime
  validUntil             DateTime?    // null = unbefristet

  createdBy              String
  createdByUser          User         @relation("AgreementCreatedBy", fields: [createdBy], references: [id])
  createdAt              DateTime     @default(now())
  updatedAt              DateTime     @updatedAt

  auditLogs              AutonomyAuditLog[]

  @@index([patientId])
  @@index([organizationId])
}

// Unveränderliches Audit-Log – Dokumentiert jede Änderung an Absprachen
model AutonomyAuditLog {
  id            String            @id @default(cuid())
  patientId     String
  patient       Patient           @relation(fields: [patientId], references: [id], onDelete: Cascade)
  agreementId   String
  agreement     AutonomyAgreement @relation(fields: [agreementId], references: [id], onDelete: Cascade)

  changedBy     String
  changedByUser User              @relation("AuditChangedBy", fields: [changedBy], references: [id])
  changedAt     DateTime          @default(now())

  fieldChanged  String            // z.B. "canPortionSupervised" oder "CREATED"
  oldValue      String            // Vorheriger Wert als String
  newValue      String            // Neuer Wert als String
  reason        String            // Begründung (Pflichtfeld, min. 10 Zeichen)

  @@index([patientId])
  @@index([agreementId])
}
